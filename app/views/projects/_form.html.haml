= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :pic
    = f.text_field :pic
  .field
    = f.label :desc
    = f.text_area :desc
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :href
    = f.text_field :href
  .field
    = f.label :top
    = f.check_box :top
  .actions
    = f.submit 'Save'
